<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivActionBarLeft"
        android:layout_width="@dimen/d40dp"
        android:layout_height="@dimen/d40dp"
        android:padding="@dimen/d5dp"
        android:src="@drawable/common_back_right_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />
    <TextView
        android:id="@+id/tvActionBarMiddle"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="@dimen/d40dp"
        app:layout_constraintTop_toTopOf="@id/ivActionBarLeft"
        app:layout_constraintBottom_toBottomOf="@id/ivActionBarLeft"
        app:layout_constraintStart_toEndOf="@id/ivActionBarLeft"
        app:layout_constraintEnd_toStartOf="@id/tvActionBarRight"
        tools:text="@string/app_name"/>

    <TextView
        android:id="@+id/tvActionBarRight"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:padding="@dimen/d5dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ivActionBarLeft"
        app:layout_constraintBottom_toBottomOf="@id/ivActionBarLeft"
        app:layout_constraintStart_toEndOf="@id/tvActionBarMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="rightText"/>
</merge>